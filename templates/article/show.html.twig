{% extends 'base.html.twig' %}

{% block title %}{{ article.Nom }} - {% endblock %}

{% block body %}
    <h1>{{ article.Nom }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Image</th>
                <td><iframe width="424" height="238" src="{{ article.Image }}" title="Article image"></iframe></td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ article.Contenu }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('article_index') }}">Retour Ã  la liste</a>
    {% if app.user and is_granted ('ROLE_ADMIN') %}
        <a href="{{ path('article_edit', {'id': article.id}) }}">Editer</a>
        {{ include('article/_delete_form.html.twig') }}
    {% endif %}
    
{% endblock %}
