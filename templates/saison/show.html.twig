{% extends 'base.html.twig' %}

{% block title %}Saison - {% endblock %}

{% block body %}
    <h1>Saison {{ saison.numero }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Date</th>
                <td>{{ saison.date ? saison.date|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Nouvelle(s) Légende(s)</th>
                <td>{{ saison.newCaracter }}</td>
            </tr>
            <tr>
                <th>Nouvelle(s) carte(s)</th>
                <td>{{ saison.newMap }}</td>
            </tr>
            <tr>
                <th>Nouvelle(s) arme(s)</th>
                <td>{{ saison.newWeapon }}</td>
            </tr>
            <tr>
                <th>Nombre de correctif</th>
                <td>{{ saison.nbFix }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('saison_index') }}">Retour à la liste</a>
    {% if app.user and is_granted ('ROLE_ADMIN') %}
        <a href="{{ path('saison_edit', {'id': saison.id}) }}">Editer</a>
    {% endif %}
    {{ include('saison/_delete_form.html.twig') }}
{% endblock %}
