{% extends 'base.html.twig' %}

{% block title %}{{ user.username }} - {% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Nom d'utilisateur</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Rôles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Mot de passe</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_user_index') }}">Retour à la liste</a>

    <a href="{{ path('admin_user_edit', {'id': user.id}) }}">Editer</a>

    {{ include('admin_user/_delete_form.html.twig') }}
{% endblock %}
