<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}Apex Community</title>
        <link rel="icon" type="image/png" href="http://sf.m3104.duchesne.com/media/apex_favicon2.png">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        <header>
        <img id="logo" src="{{ asset('media/Apex_Legends_Logo.png') }}" alt="logo apex legend">
       
		<ul id="menu">
			<li><a href="{{ url('home') }}">accueil</a></li>
			<li><a href="#">record du monde</a></li>
            {% if app.user and is_granted ('ROLE_ADMIN') %}
                <li><a href="{{ url('action_semaine_index') }}">action de la semaine</a></li>
            {% else %}
                <li><a href="{{ url('user_action_semaine_index') }}">action de la semaine</a></li>
            {% endif %}
            {% if app.user and is_granted ('ROLE_ADMIN') %}
                <li><a href="{{ url('saison_index') }}">saison</a></li>
            {% else %}
			    <li><a href="{{ url('user_saison_index') }}">saison</a></li>
            {% endif %}
            {% if app.user %}
                <li class="lastItem" id="user">{{ app.user.username }}
                    <div class="profile icon"></div>
                    <ul>
                        {% if app.user and is_granted ('ROLE_ADMIN') %}
                            <li><a href="{{ url('admin_user_index') }}">panneau admin</a></li>
                        {% endif %}
                        <li><a id="logout" href="{{ url('app_logout') }}">d√©connexion</a></li>
                    </ul>
                </li> 
            {% else %}
                <li class="lastItem"><a id="connection" href="{{ url('app_login') }}">se connecter</a></li>
            {% endif %}
		</ul>
        </header>
        <main>
            {% block body %}{% endblock %}
        </main>
        <footer>
        </footer> 
    </body>
</html>
